<div itemscope itemtype="http://schema.org/Blog">
<div><i class="icon-user"></i> <a itemprop="author" href="/about">Tim Millwood</a></div>
<div><meta itemprop="datePublished" content="<%= @contents.created.strftime("%Y-%m-%d") %>"><i class="icon-time"></i> <%= @contents.created.strftime("%d %B %Y") %></div>
<div><i class="icon-tags"></i>
  <% @contents.tags.each do |tag| %>
  <%= "<a href='/tag/#{tag.tag.gsub(' ', '-')}'>#{tag.tag}</a>" %>
  <% end %>
</div>
<% if @contents.file %>
<img src="//static.millwoodonline.co.uk/images/<%= @contents.file %>" style="width:100%;height:auto;margin: 5px 0 10px 0;" />
<% end %>

<div class="pull-right share-buttons">
<a href="http://news.ycombinator.com/submit" class="hn-share-button" data-title="<%= @contents.title %>" data-url="http://<%= request.host %><%= request.path %>">Vote on HN</a>
<script>
    (function(d, t) {
        var g = d.createElement(t),
            s = d.getElementsByTagName(t)[0];
        g.src = '//hnbutton.appspot.com/static/hn.min.js';
        s.parentNode.insertBefore(g, s);
    }(document, 'script'));
</script>
<a href="https://twitter.com/share" class="twitter-share-button" data-via="timmillwood" data-url="http://<%= request.host %><%= request.path %>" data-text="<%= @contents.title %>" data-related="timmillwood">Tweet</a>
<script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>

<iframe src="//www.facebook.com/plugins/like.php?href=http://<%= request.host %><%= request.path %>&amp;send=false&amp;layout=button_count&amp;width=107&amp;show_faces=false&amp;action=like&amp;colorscheme=light&amp;font&amp;height=21" scrolling="no" frameborder="0" style="border:none; overflow:hidden; width:107px; height:21px;" allowTransparency="true"></iframe>

<script src="//platform.linkedin.com/in.js" type="text/javascript"></script>
<script type="IN/Share" data-counter="right"></script>

<!-- Place this tag where you want the +1 button to render. -->
<div class="g-plusone" data-size="medium"></div>

<!-- Place this tag after the last +1 button tag. -->
<script type="text/javascript">
  window.___gcfg = {lang: 'en-GB'};

  (function() {
    var po = document.createElement('script'); po.type = 'text/javascript'; po.async = true;
    po.src = 'https://apis.google.com/js/plusone.js';
    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(po, s);
  })();
</script>
</div>


<div>
<!-- google_ad_section_start -->  
<%= @contents.body %>
<!-- google_ad_section_end -->
</div>


