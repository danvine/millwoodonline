<div><i class="icon-time"></i> <%= @contents.created.strftime("%d %B %Y") %></div>
<div><i class="icon-tags"></i>
  <% @contents.legacy_tags.split(', ').each do |tag| %>
  <%= "<a href='/tag/#{tag.gsub(' ', '-')}'>#{tag}</a>" %>
  <% end %>
</div>

<div class="pull-right share-buttons">
<a href="https://twitter.com/share" class="twitter-share-button" data-via="timmillwood" data-url="<%= request.url %>" data-text="<%= @contents.title %>" data-related="timmillwood">Tweet</a>
